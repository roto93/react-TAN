// News
.news
    // border 1px solid #fff
    text-align: center
    padding 2em 0
    background linear-gradient(0deg,transparent ,#1B2533)

.news__content
    // border 1px solid white
    display-flex column flex-start center
    width 86%
    margin 0 auto
    font-size 0.875rem

.news__title
    font-size 1.5rem
    font-family "Inder"
    font-weight bold
    letter-spacing 0.3em
    margin 0 auto

.news__hr
    width 10%
    border 2px solid #ffffff95
    margin 1.25em auto

.news__list
    display-flex column flex-start center
    font-family 'Noto Sans'
    line-height 1.3

.news__item
    cursor pointer
    display: inline-block
    &:nth-child(odd)
        color text-primary
    &:nth-child(even)
        color text-secondary
    &+&
        margin-top: 1.25em
    
    &:active
    &:focus
        opacity 0.5


// Cards

.cards
    padding: 2em 0

.cards__content
    user-select: none
    display-flex column flex-start center
    width 86%
    margin 0 auto
    padding 2em 0

.cards__card
    // border 1px solid #fff
    display-flex column center center
    overflow hidden
    width 270px
    height 360px
    margin 0 1.5em 2em 1.5em
    padding 2em 2em
    border-radius 16px
    background linear-gradient(135deg,#ffffff30,#ffffff05)
    border-top: 1px solid #ffffff60
    border-left 1px solid #ffffff60
    box-shadow 2px 2px 10px #00000050 
    // backdrop-filter: blur(5px)
    transform-style: none

.cards__card.hide
    transform-style preserve-3d
    & .cards__h2
        transform translateY(0)

    & .cards__card__list
        // display none
        transform translateY(122px)
        opacity 0

    &:hover,&:active,&:focus
        & .cards__h2
            transform translateY(-122px)
        & .cards__card__list
            // display-flex column center center
            transform translateY(29px)
            opacity 1

.cards__h2
    font-size 2.5rem
    font-weight 500
    font-family 'Rajdhani'
    letter-spacing: 10px
    text-indent 10px
    margin-bottom 0.5em
    position absolute
    transform translateY(-122px)
    transition transform 0.3s ease-in-out
    cursor pointer
    &:hover
        color #d4a373
    &:active
    &:focus
        color #d4a373
        opacity 0.5

.cards__card__list
    text-align center
    font-size: 1.25rem
    line-height 1.3
    font-family Arial
    color #C5C5C5
    transform translateY(29px)
    transition opacity 0.3s ease-in-out, transform 0.3s ease-in-out


.cards__card__item
    cursor pointer

    &:hover
        color #d4a373

    &:active
    &:focus
        color #d4a373
        opacity 0.5

    &+&
        margin-top :16px


// issues
.issues
    min-height: 800px
    padding 2em 0
    background linear-gradient(0deg,transparent 20%,#1B2533)

.issues__content
    // border 1px solid white
    width 86%
    margin 0 auto
    display-flex column flex-start center

.issues__year
    user-select none
    margin 0 auto 0.25em auto
    font-size 2.5rem
    font-family 'Rajdhani'

.issues__nav
    // border 1px solid red
    user-select none
    display-flex row center center
    flex-wrap: wrap

.issues__nav__item
    // border 1px solid orange
    user-select none
    display-flex row center center
    padding 0.5em 0
    font-size 1rem
    font-family 'Noto Sans'
    width 140px
    &.active a
        color #d4a373

// issues table

.issues__table
    border 1px solid #457b9d
    border-collapse: collapse
    border-radius 8px
    overflow hidden
    width 100%  
    margin 2em 0 0 0
    font-size 1.125rem
    font-family sans-serif

.issues__thead
    display none
    // border 1px solid white
    width 100%
    background-color #457b9d80

.issues__th__date
    display-flex column flex-start center
    padding 0.5em
    width 70px

.issues__th__issue
    padding 0.5em


.issues__tbody
    width 100%
    // border 1px solid gold

.issues__eachDay
    // border 1px solid orange
    padding 0.5em 0

    &:nth-child(odd)
        *
            color #ccc

    &:nth-child(even)
        background-color #ffffff20
        *
            color #eee

.issues__td__date
    // background-color #ffffff88
    display-flex column flex-start center
    padding 0.375em 0 0.25em 0
    font-size 1rem
    line-height 1.2
    flex-shrink: 0

.issues__td__issueList
    {}
.issues__td__issueItem
    cursor pointer
    padding 0.375em
    // list-style: disc
    font-size 1rem
    line-height 1.2
    white-space: pre-wrap;
    &:hover
        color: #d4a373;


// links
.links
    padding 2em 0
    background linear-gradient(0deg,transparent 20%,#1B2533)

.links__content
    // border 1px solid white
    width 86%
    margin 0 auto
    display-flex row center center
    flex-wrap: wrap
    user-select none

.links__card
    cursor pointer
    width 270px
    height 305px
    border-radius: 16px
    margin 0 1.5em 2.75em 1.5em
    overflow hidden
    background linear-gradient(135deg,#ffffff30,#ffffff05)
    border-top: 1px solid #ffffff60
    border-left 1px solid #ffffff60
    box-shadow 2px 2px 10px #00000050 
    box-sizing: border-box
    position relative
    transition transform 0.2s ease-in-out

.links__card__a
    text-decoration none
    &:hover
        transform scale(1.01)
    &:hover:after
        content ''
        position absolute
        trbl 0 0 0 0 
        border 4px solid white
        border-radius 16px

        

.links__card__logoBox
    height 178px
    overflow hidden
    display-flex row center center
    background-color #fff

.links__card__img
    height: 90%

.links__card__abbr
.links__card__title
    text-align: center
    margin-top 16px

.links__card__abbr
    font-family "Rajdhani"
    font-size 1.5rem
    letter-spacing: 6px
    line-height 1.25

.links__card__title
    font-family "Roboto"
    font-size 1rem



// archive

.archive
    min-height: 800px
    padding 2em 0
    background linear-gradient(0deg,transparent 20%,#1B2533)

.archive__content
    // border 1px solid white
    user-select none
    max-width 86%
    margin 0 auto
    display-flex column flex-start center
    
.archive__header
    display-flex row flex-end center
    width 100%
    font-family "Roboto"
    font-size 0.875rem
    margin-bottom 2em

.archive__search_logo
    display-flex row center center
    position relative
    transform translate(27px)
    font-size 1rem
    

.archive__search
    width 160px
    height 30px
    background-color rgba(#ffffff,0.1)
    border none
    border-radius: 15px
    margin-right: 24px
    padding 7px 28px 7px 36px
    color #ffffff
    outline none


.archive__sort
    display-flex row flex-start center
    margin-right: 12px
    cursor pointer
    *
        color #ddd
    &:hover *
        color  #fff
    &:active
        opacity: 0.5
    

.archive__sort__logo
    display-flex row center center
    font-size 1rem

.archive__sort__text
    margin 0 4px 0 8px

.archive__sort__arrowLogo
    display-flex row center center
    font-size 1rem

.archive__fileBox
    display-flex row center center
    width 100%
    flex-wrap: wrap

.archive__file
    cursor pointer
    display-flex row center center
    width 45%
    max-width: 150px
    font-size 1.25rem
    // padding 0.75em
    margin .5em 0.6em 0.5em 0
    border-radius 4px
    position relative
    &:hover .archive__fileImg
        opacity 0.7

.archive__fileImg
    width 100%
    opacity 0.2
    


.archive__year
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-30%)
    font-size 1.5em
    font-family "Rajdhani"
    letter-spacing: 4px
    text-indent 4px



// detail

.detail
    min-height: 800px
    padding 2em 0
    background linear-gradient(0deg,transparent 20%,#1B2533)
    font-family 'Merriweather'

.detail__issue-title
.detail__date-title
    text-align: center

.detail__issue-title
    font-size 1rem
    line-height 1.3em
    
.detail__date-title
    font-size 0.75rem
    line-height 2em
    color #ccc

.detail__content
    display-flex column flex-start flex-start
    width 86%
    max-width 900px
    margin 1em auto 0 auto
    padding 2em
    font-size 0.75em
    font-family 'Noto Sans'
    line-height 1.5
    color #ddd
    background linear-gradient(135deg,#ffffff25,#ffffff10)
    box-shadow: 0px 0px 8px #00000080 inset, 0px 0px 8px #00000080 inset
    word-wrap break-word

.detail__admin
    display-flex row space-evenly center
    width 100%
    height 100px
    margin 0 auto

.detail__deleteThis
    cursor pointer

.detail__editThis
    cursor pointer

.detail__back-to-top
    cursor pointer
    user-select: none
    display-flex row center center
    width 86%
    max-width: 900px
    margin 40px auto 0
    &:hover *
        color #d4a373
    &:active
        opacity 0.5
    



.detail__back-to-top__icon
    svg-size 24px


.detail__back-to-top__text
    font-size 16px
    font-family "Noto Sans"
    margin-left 16px


*
    color:#fff
    box-sizing: border-box

text-primary = #FFDEDE
text-secondary = #D8E0FF

display-flex(direction, main, cross)
    display flex
    flex-direction direction
    justify-content main
    align-items cross


html
    background-color: #222F43;



.container
    // border 1px solid #fff
    width: 100%
    max-width: 1200px
    margin:0 auto
    height 100%
    position relative
    overflow hidden


.banner
    height: 100vh
    min-height: 500px
    background: url('../images/NightSkyBackground.jpeg')  no-repeat
    background-size: cover
    background-position: center bottom
    display-flex row center center
    position relative
    & .container
        display-flex row center center

    // 橋接banner跟main的漸層
    &:after
        content: ''
        position absolute
        bottom 0
        background: linear-gradient(0deg, #1B2533,transparent)
        width 100%
        height 100px
        // border 1px solid #fff

.banner__content
    display-flex column center center
    width 86%
    margin 0 auto
    user-select none

.banner__topNav
    display-flex row flex-end center
    position fixed
    top 0
    width 100%
    height 64px
    background-color #00000090
    z-index 100

.banner__topNav__list
    display inline-block
    position absolute
    top 0
    height: 100vh
    width 20%
    min-width: 200px
    background-color #C5C5C5
    transform translate(101%,64px)
    transition transform 0.2s ease-in-out
    font-family 'Noto Sans'
    &.active
        transform translate(0%,64px)

.banner__topNav__item
    display-flex column center center
    height 60px
    background-color #C5C5C588

.banner__topNav__logo 
    position absolute
    left 20px
    width 32px
    height 32px
    font-size 32px

.banner__topNav__menu
    position absolute
    right 20px
    width 32px
    height 32px
    font-size 24px
    display-flex row center center

.banner__nav
    // border 1px solid black
    display none
    width 110%
    position absolute
    top 0
    transform translateY(-140%)

.banner__nav__item
    display-flex row center center
    font-size: 1.5rem
    font-family 'Noto Sans'
    text-decoration none
    width 110px

    & .banner__star
        position absolute
        z-index: -1
        opacity: 0
        font-size: 2rem
        transform translateY(0px)
        transition all 0.3s ease-in-out

    &.active .banner__star
        opacity 1
        transform translateY(-40px)

.banner__nav__logo
    font-size: 72px
    width 72px
    height 72px

.banner__title
    display-flex row center center
    flex-wrap: wrap
    width 80%
    min-width 250px
    padding 1.25em 0.5em
    border-top: 5px solid #ffffff88
    border-bottom: 5px solid #ffffff00
    border-radius: 50%
    font-size 2.5rem
    line-height 1.4
    font-family 'Numans'
    position relative
    transition none 0.3s ease-in

.banner__title__h1
    &.astronomy
        margin 0 0.75em

.banner__arrow
    display-flex column center center
    position absolute
    bottom 0px
    font-size 3rem
    transform translateY(80px)
    animation jumping 1.5s ease-in-out  infinite 

@keyframes jumping {
    0% {
        transform translateY(60px)    
    }
    50% {
        transform translateY(80px)
    }
    100% {
        transform translateY(60px)    
    }
}

// main
.main
    // border 1px solid gold
    background-image url('../images/OrionBackground.png')
    background-size cover
    background-position center 
    background-attachment: fixed


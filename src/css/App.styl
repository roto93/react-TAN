    &:active
        opacity 0.5

.login__error-box
    border 1px solid darkred
    border-radius: 8px
    max-width: 400px
    margin 1em auto
    padding 1.5em 2em 1.5em 1em
    background-color rgba(red,0.2)
    position relative

.login__error
    color pink

.login__error__cross
    position absolute
    top 12px
    right 12px 
    cursor pointer



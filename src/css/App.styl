        height 40px


.upload__form__date
    margin 0.5em 1em
    padding 0.75em .5em 
    color black

.upload__form__title
    margin 0.5em 1em
    padding 0.75em .5em 
    color black


.upload__form__textarea
    max-width: 800px
    margin 0.5em 1em
    padding 0.75em .5em 
    resize: none
    color black


.upload__form__button 
    margin 2em 1em 0.5em 1em
    padding 0.75em .5em 
    color:#000

.upload__signout__button
    position absolute
    bottom -0.5em
    right 1em
    color black
    z-index 100


// login
.login
    padding 2em 0
    background linear-gradient(0deg,transparent 20%,#1B2533)
    min-height 800px

.login__content
    // border 1px solid white
    width 86%
    margin 0 auto
    font-family "Noto Sans" ,sans-serif

.login__title
    text-align: center
    font-size 1.5rem
    margin 0.5em


.login__form
    display-flex column flex-start flex-start
    width 100%
    max-width: 400px
    margin 0 auto
    padding 1.5em
    background-color #121B22
    border 1px solid #333
    border-radius: 8px


.login__label
    font-size 1rem
    margin 0.75em 0

.login__input
    width 100%
    font-size 1.125rem
    color #ddd
    padding 0.75em
    margin 0 0 0.75em 0 
    border-radius: 8px
    border 1px solid #333
    background-color #101010

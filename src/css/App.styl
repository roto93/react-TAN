.banner__nav
    // border 1px solid black
    display none
    width 90%
    min-width: 500px
    position absolute
    top 0
    transform translateY(-140%)

.banner__nav__item
    display-flex row center center
    cursor pointer
    font-size: 1.5rem
    font-family 'Inder'
    text-decoration none
    width 110px
    &:hover
        font-weight: bold
    &:active
        font-weight: bold
        opacity: 0.5

    & .banner__star
        position absolute
        z-index: -1
        opacity: 0
        font-size: 1.75rem
        transform translateY(0px) 
        transition all 0.3s ease-in-out

    &.active .banner__star
        opacity 1
        transform translateY(-32px)

.banner__nav__logo
    font-size: 56px
    width 56px
    height 56px

.banner__title
    display-flex row center center
    flex-wrap: wrap
    width 80%
    min-width 250px
    padding 1.25em 0.5em
    border-top: 5px solid #ffffff88
    border-bottom: 5px solid #ffffff00
    border-radius: 50%
    font-size 2.5rem
    line-height 1.4
    position relative
    transition none 0.3s ease-in

.banner__title__h1
    font-family 'Inder'
    &.astronomy
        margin 0 0.75em

.banner__arrow
    display-flex column center center
    position absolute
    bottom 0px
    font-size 3rem
    transform translateY(80px)
    animation jumping 1.5s ease-in-out  infinite 

@keyframes jumping {
    0% {
        transform translateY(60px)    
    }
    50% {
        transform translateY(80px)
    }
    100% {
        transform translateY(60px)    
    }

// Home  //
// // // //

// News
.news
    // border 1px solid #fff
    text-align: center
    padding 2em 0
    background linear-gradient(0deg,transparent ,#1B2533)

.news__content
    // border 1px solid white
    display-flex column flex-start center
    width 86%
    margin 0 auto
    font-size 0.875rem

.news__title
    font-size 1.5rem
    font-family Arial
    font-weight bold
    letter-spacing 0.3em
    margin 0 auto

.news__hr
    width 10%
    border 2px solid #ffffff95
    margin 1.25em auto

.news__list
    display-flex column flex-start center
    font-family 'Noto Sans'
    line-height 1.3

.news__item
    cursor pointer
    display: inline-block
    &:nth-child(odd)
        color text-primary
    &:nth-child(even)
        color text-secondary
    &+&
        margin-top: 1.25em
    
    &:active
    &:focus
        opacity 0.5


// Cards

.cards
    padding: 2em 0

.cards__content
    user-select: none
    display-flex column flex-start center
    width 86%
    margin 0 auto
    padding 2em 0

.cards__card
    // border 1px solid #fff
    display-flex column center center
    overflow hidden
    width 270px
    height 360px
    margin 0 1.5em 2em 1.5em
    padding 2em 2em
    border-radius 24px
    background linear-gradient(135deg,#ffffff30,#ffffff05)
    border-top: 1px solid #ffffff60
    border-left 1px solid #ffffff60
    box-shadow 2px 2px 10px #00000050 
    // backdrop-filter: blur(5px)
    transform-style: none

.cards__card.hide
    & .cards__h2
        transform translateZ(30px) translateY(0)

    & .cards__card__list
        // display none
        transform translateZ(30px) translateY(122px)
        opacity 0

    &:hover,&:active,&:focus
        & .cards__h2
            transform translateZ(30px) translateY(-122px)
        & .cards__card__list
            // display-flex column center center
            transform translateZ(30px) translateY(29px)
            opacity 1

.cards__h2
    font-size 2.5rem
    font-weight 500
    font-family 'Rajdhani'
    letter-spacing: 10px
    text-indent 10px
    margin-bottom 0.5em
    position absolute
    transform translateZ(30px) translateY(-122px)
    transition transform 0.3s ease-in-out

.cards__card__list
    text-align center
    font-size: 1.25rem
    line-height 1.3
    font-family Arial
    color #C5C5C5
    transform translateZ(20px) translateY(29px)
    transition opacity 0.3s ease-in-out, transform 0.3s ease-in-out


.cards__card__item
    cursor pointer

    &:hover
        color #d4a373

    &:active
    &:focus
        color #d4a373
        opacity 0.5

    &+&
        margin-top :16px



*
    color:#fff
    box-sizing: border-box

text-primary = #FFDEDE

display-flex(direction, main, cross)
    display flex
    flex-direction direction
    justify-content main
    align-items cross


html
    background-color: #222F43;



.container
    width: 100%
    max-width: 1200px
    margin:0 auto


.banner
    color: text-primary
    height: 100vh
    background: url('../images/NightSkyBackground.jpeg')  no-repeat
    background-size: cover
    background-position: center bottom
    display-flex row center center
    position relative

.banner__content
    display-flex column center center
    width 80%
    margin 0 auto



.banner__topNav
    display-flex row flex-end center
    position absolute
    top 0
    width 100%
    height 64px
    background-color #00000066


.banner__topNav__list
    display inline-block
    position absolute
    transform translate(101%,62.5%)
    transition transform 0.3s ease-in-out
    &.active
        transform translate(0%,62.5%)

.banner__topNav__item
    display-flex column center center
    width 100px
    height 60px
    background-color #dddddd88

.banner__topNav__logo 
    position absolute
    left 20px
    width 32px
    height 32px
    font-size 32px


.banner__topNav__menu
    position absolute
    right 20px
    width 24px
    height 24px
    font-size 24px



.banner__title
    display-flex row center center
    flex-wrap: wrap
    width 80%
    padding 1.25em 1em
    border-top: 2px solid #ffffff88
    border-bottom: 2px solid #ffffff88
    font-size 40px
    line-height 1.4
    font-family 'Numans'



.banner__arrow
    position absolute
    bottom 50px
    font-size 40px
    transform translateY(0)
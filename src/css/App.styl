// About // 
// // // // 

// letter

.letter
    padding 5em 0
    background linear-gradient(0deg,transparent 20%,#1B2533)

.letter__content
    width 86%

    font-size 1.25rem
    font-family 'Noto Sans'
    line-height 2
    
    margin 0 auto
    padding 2em 2em
    border-radius 16px
    background linear-gradient(135deg,#ffffff25,#ffffff10)
    border-top: 1px solid #ffffff60
    border-left 1px solid #ffffff60
    box-shadow 2px 2px 10px #00000050 
    backdrop-filter: blur(2px)

.letter__text
    color #ddd
    text-align: justify


// footer
.footer
    background-color #222F43cc

.footer__content
    user-select none
    width 86%
    margin 0 auto
    padding 3em 0
    font-family "Noto Sans"

.footer__title
    font-size 1.25rem
    margin-bottom 1em
    font-family 'Numans'

.footer__list
    display-flex column flex-start flex-start


.footer__item
    cursor pointer
    display inline-block
    font-size 1rem
    &:active
    &:focus
        opacity 0.5
    &+&
        margin-top 1em


.footer__author
    text-align: center
    font-size 0.85em
    line-height 1.5
    margin-top 1em
    color #C5C5C5


@media (min-width:600px)

    // banner
    .banner__topNav
        display none

    .banner__nav
        display-flex row space-between stretch

    .banner__title
        padding 1em 0
        border-radius: 0
        border-top: 3px solid #ffffff88
        border-bottom: 3px solid #ffffff88
        font-size 2.75rem

    .banner__arrow
        bottom -100px
        font-size 3.5rem


    // news
    .news__content
        font-size 1.25rem

    .news__title
        font-size 2rem


    
    // Cards
    .cards__content
        display-flex row center center
        flex-wrap: wrap

    .cards__card
        transform-style: preserve-3d

    // Footer
    .footer__title
        font-size 1.75rem
        
    .footer__item
        font-size 1.25rem
        
@media(min-width:920px)
    .banner__nav__item
        font-size 1.875rem
    
    .banner__title
        font-size 2.75rem
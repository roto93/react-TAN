*
    color:#fff
    box-sizing: border-box

text-primary = #FFDEDE
text-secondary = #D8E0FF

display-flex(direction, main, cross)
    display flex
    flex-direction direction
    justify-content main
    align-items cross


html
    background-color: #222F43;



.container
    // border 1px solid #fff
    width: 100%
    max-width: 1200px
    margin:0 auto
    height 100%
    position relative
    overflow hidden


.banner
    height: 100vh
    min-height: 500px
    background: url('../images/NightSkyBackground.jpeg')  no-repeat
    background-size: cover
    background-position: center bottom
    display-flex row center center
    position relative
    & .container
        display-flex row center center

    // 橋接banner跟main的漸層
    &:after
        content: ''
        position absolute
        bottom 0
        background: linear-gradient(0deg, #1B2533,transparent)
        width 100%
        height 100px
        // border 1px solid #fff

.banner__content
    display-flex column center center
    width 86%
    margin 0 auto

.banner__topNav
    display-flex row flex-end center
    position fixed
    top 0
    width 100%
    height 64px
    background-color #00000090
    z-index 100


.banner__topNav__list
    display inline-block
    position absolute
    top 0
    height: 100vh
    width 20%
    max-width: 200px
    background-color #C5C5C5
    transform translate(101%,64px)
    transition transform 0.2s ease-in-out
    font-family 'Noto Sans'
    &.active
        transform translate(0%,64px)

.banner__topNav__item
    display-flex column center center
    height 40px
    background-color #C5C5C588

.banner__topNav__logo 
    position absolute
    left 20px
    width 32px
    height 32px
    font-size 32px


.banner__topNav__menu
    position absolute
    right 20px
    width 32px
    height 32px
    font-size 24px
    display-flex row center center

.banner__nav
    border 1px solid black
    height 200px

.banner__title
    display-flex row center center
    flex-wrap: wrap
    width 80%
    min-width 250px
    padding 1.25em 1em
    border-top: 5px solid #ffffff88
    // border-bottom: 5px solid #ffffff88
    border-radius: 50%
    font-size 40px
    line-height 1.4
    font-family 'Numans'
    position relative

.banner__title__h1
    &.astronomy
        margin 0 0.75em

.banner__arrow
    display-flex column center center
    position absolute
    bottom 0px
    font-size 48px
    transform translateY(80px)
    animation jumping 1.5s ease-in-out  infinite 

@keyframes jumping {
    0% {
        transform translateY(60px)    
    }
    50% {
        transform translateY(80px)
    }
    100% {
        transform translateY(60px)    
    }
}

// main
.main
    // border 1px solid gold
    background-image url('../images/OrionBackground.png')
    background-size cover
    background-position center 
    background-attachment: fixed


// News
.news
    // border 1px solid #fff
    text-align: center
    padding 2em 0

.news__content
    // border 1px solid white
    width 86%
    margin 0 auto

.news__title
    font-size 24px
    font-family Arial
    font-weight bold
    letter-spacing 4px
    margin 0 auto

.news__hr
    width 10%
    border 2px solid #ffffff95
    margin 1.25em auto

.news__list
    font-size 14px
    font-family 'Noto Sans'
    line-height 1.3

.news__item
    margin-top 1.25em
    &:nth-child(odd)
        color text-primary
    &:nth-child(even)
        color text-secondary
    


// Cards

.cards
    padding: 2em 0

.cards__content
    display-flex column flex-start center
    width 86%
    margin 0 auto
    padding 2em 0

.cards__card
    // border 1px solid #fff
    display-flex column flex-start center
    width 270px
    height 360px
    padding 2em 2em
    border-radius 32px
    background linear-gradient(135deg,#ffffff30,#ffffff05)
    border-top: 1px solid #ffffff60
    border-left 1px solid #ffffff60
    box-shadow 2px 2px 10px #00000050 
    // backdrop-filter: blur(5px)
    transform-style: preserve-3d
    // transform: perspective(1000px)

    &+.cards__card
        margin-top: 2em


.cards__h2
    font-size 40px
    font-weight 500
    font-family 'Rajdhani'
    letter-spacing: 10px
    margin-bottom 0.5em
    text-indent 10px
    transform translateZ(30px)

.cards__card__list
    text-align center
    font-size: 20px
    line-height 1.3
    font-family Arial
    color #C5C5C5
    transform translateZ(20px)




.cards__card__item
    &+&
        margin-top :16px




.footer
    background-color #222F43cc
    height 300px

.footer__content
    width 86%
    margin 0 auto
    font-size 1em
    font-family "Noto Sans"
    padding 3em 0

.footer__title
    font-size 1.25em
    margin-bottom 1em
    font-family 'Numans'


.footer__item
    &+&
        margin-top 1em


.footer__author
    text-align: center
    font-size 0.85em
    margin-top 2em
    color #C5C5C5




@media (min-width:600px)
    .banner__topNav
        display none
